<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="14"
    android:layout_height="match_parent"
    tools:context=".ShareLocationAct" >

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12.5"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:background="#46464E"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="8.7"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="9"
                android:padding="5dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:background="@drawable/layoutbg"
                android:id="@+id/addressId"
                android:hint="Your current location.."
                android:textIsSelectable="true"
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="9"
                android:padding="8dp"
                android:layout_marginTop="5dp"
                android:textSize="14sp"
                android:layout_marginBottom="5dp"
                android:id="@+id/msgEtLsId"
                android:paddingLeft="10dp"
                android:background="@drawable/layoutbg"
                android:textIsSelectable="true"
                android:hint="  White your message here.."
                android:textColor="@color/black"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageButton
            android:id="@+id/sendMsgBtnId"
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_send_black_24dp"
            tools:layout_editor_absoluteX="371dp"
            tools:layout_editor_absoluteY="691dp" />

    </LinearLayout>

</LinearLayout>


