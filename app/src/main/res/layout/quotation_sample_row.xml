<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="3dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#BEF5F5F5"
        android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dateQsTvId"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="date"
            android:layout_gravity="left"
            android:gravity="left"

            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="QTY NO:"
            android:id="@+id/qtyQsTvId"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:text="To,"
        android:textStyle="bold"
        android:id="@+id/toQsId"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

<TextView
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
    android:id="@+id/factoryNameQsTvId"
        android:layout_gravity="right"
        android:gravity="left"
        android:text="Factory Name"
    android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />


<TextView
    android:id="@+id/factoryAddressQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:gravity="left"
        android:text="Factory address"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />


<TextView
    android:id="@+id/attnPersonQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:text="Kind Attn"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

<TextView
    android:id="@+id/ccPersonQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="right"
        android:gravity="left"
        android:text="CC"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

<TextView
    android:id="@+id/quotationQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="QUOTATION"
    android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittextbg"
            android:layout_height="wrap_content">

   <TextView
       android:id="@+id/productListQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:gravity="left"
       android:padding="5dp"
        android:layout_height="wrap_content" />

        </LinearLayout>
 <TextView
     android:id="@+id/totalPriceQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:text="Total Price"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/discountQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:text="Discount"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/vatQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:text="Vat0%"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />

         <TextView
             android:id="@+id/grandAmountQsTvId"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_marginTop="2dp"
        android:text="Grand Amount"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content" />



    </LinearLayout>

</androidx.cardview.widget.CardView>