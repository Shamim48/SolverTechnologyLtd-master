<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="right"
    android:gravity="right"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:elevation="3dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="right"
        android:background="@color/right_lot_color"
        android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:background="@color/right_lot_color"
        android:id="@+id/replyParentLotId"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#BCC2C2C2"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/msgTv_RprLId"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:text=" Reply message"
                android:textIsSelectable="true"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayoutLeftId"
            android:layout_height="wrap_content">
            <!-- GMR=group message Id-->

            <TextView
                android:id="@+id/msgTv_replyLId"
                android:textSize="16sp"
                android:layout_marginLeft="15dp"
                android:text="message"
                android:textIsSelectable="true"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timeTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:text="Time" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=" ," />

                <TextView
                    android:id="@+id/dateTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="date" />



            </LinearLayout>



        </LinearLayout>



    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>