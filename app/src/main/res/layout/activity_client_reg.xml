<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Client_reg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layoutbg"
            android:orientation="vertical"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000"
            android:padding="30dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Client/Company Name"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/companyNameEtId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:hint=" Enter client/company Name"
                android:paddingLeft="5dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Consultant Person"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/consultantPNId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:hint=" Enter Consultant person Name"
                android:paddingLeft="5dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Address"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/addressCompanyId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:hint=" Enter Company address"
                android:paddingLeft="5dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Phone"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/phoneCompanyId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:inputType="phone"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:hint=" Enter Client phone number"
                android:paddingLeft="5dp"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Email"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/emailCompanyId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:hint=" Enter client email"
                android:paddingLeft="5dp"
                android:textSize="16dp" />

            <Button
                android:id="@+id/clientRegisterBtnId"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttonbg"
                android:text="Register"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>