<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginRight="80dp"
    android:layout_marginEnd="80dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:elevation="3dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="80dp"
        android:paddingRight="10dp"
        android:layout_gravity="left"
        android:background="#FFFFFF"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#B5F8F8F8"
            android:padding="8dp"
            android:id="@+id/linearLayoutRightId"
            android:layout_height="wrap_content">
            <!-- GMR=group message Id-->

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameTv_GMRId"
                    android:textSize="18sp"
                    android:layout_marginRight="5dp"
                    android:text="Name"
                    android:textIsSelectable="true"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/menuIconId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight=".4"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:text="@string/menu_icon"
                    android:textSize="20sp"
                    android:paddingTop="5dp"
                    android:textStyle="bold" />
            </LinearLayout>

          <!--  <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="250dp"
                android:layout_height="250dp"

                />-->
            <ImageView
                android:id="@+id/mapImageId"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:background="@drawable/mapimg"
                android:adjustViewBounds="true"
                android:layout_height="180dp" />

            <TextView
                android:id="@+id/addressTv_GMRId"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:text=""
                android:textIsSelectable="true"
                android:gravity="left"
                android:textColor="#2196F3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/msgTv_GMRId"
                android:textSize="16sp"
                android:layout_marginRight="15dp"
                android:text=""
                android:textIsSelectable="true"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/timeTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:layout_marginLeft="50dp"
                    android:text="Time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=" ," />

                <TextView
                    android:id="@+id/dateTvId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="date" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>